{{#if addNewQuestion}}
<hr>
<button class="btn btn-xs btn-warning"{{action "questionFormHide"}}>Hide this form</button>
<form>
  <div class="form-group">
    <label for="author">Your Name</label>
    {{input value=author id="author" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="subject">General subject of your question</label>
    {{input value=subject id="subject" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="question">Your question</label>
    {{input value=question id="question" class="form-control"}}
  </div>
  <div class="form-group">
    <label for="body">Any additional explination or supplimentary questions</label>
    {{input value=body id="body" class="form-control"}}
  </div>
  <button class="btn btn-md btn-success" {{action "saveQuestion"}}>Ask</button>
</form>
<hr>
{{else}}
  <button class="btn btn-md btn-success"{{action "questionFormShow"}}>Ask a question</button>
{{/if}}
